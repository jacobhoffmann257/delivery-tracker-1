<div>
  <div>
  <h1>Delivery Tracker</h1>
    <p>
      Know if something gets lost in the mail.
    </p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <input type="checkbox" id="arrived_box" name="query_arrived" value="1">

        <label for="arrived_box">Arrived</label>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div class="waiting_on">
    <h2>Waiting on</h2>
    <ul>
        <% @arriving.each do |a_delivery| %>
          <li>
          <p> <%= a_delivery.description %></p>

            <p><%= a_delivery.details %></p>
            <p><%= a_delivery.supposed_to_arrive_on%></p>
            </li>
        <% end %>
        </ul>
  </div>
    <div class="received">
    <h2>Received</h2>
    <ul>
        <% @arriving.each do |a_delivery| %>
          <li>
          <p> <%= a_delivery.description %></p>

            <p><%= a_delivery.details %></p>
            <p><%= a_delivery.supposed_to_arrive_on%></p>
            </li>
        <% end %>
        </ul>
  </div>
</div>

<hr>
